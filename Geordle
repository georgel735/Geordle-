playHit = Oval(200, 315, 75, 45)
playLabel = Label("Play", 200, 315, size = 25, fill = 'white')
startingScreen.add(playHit)
startingScreen.add(playLabel)
#*
def endGame(hasWon):
Rect(0, 0, 400, 400)
if (hasWon == True):
if (guesses == 0):
Label("Good job, you got it in " + str(guesses + 1) + " try", 200, 200, size = 25, fill =
"white")
else:
Label("Good job, you got it in " + str(guesses + 1) + " tries", 200, 200, size = 25, fill =
"white")
if (hasWon == False):
Label("Sorry, the word was " + word, 200, 200, size = 25, fill = "red")
def isWord(wordGuess, row):
if (wordGuess.upper() == word):
for i in range(5):
grid[row][i].fill = "green"
endGame(True)
def isInWord(row):
guessed = ""
for i in range(5):
if (wordGrid[row][i].value == word[i]):
grid[row][i].fill = "green"
for i in range(5):
guessed += wordGrid[row][i].value
for i in range(5):
numChar = word.count(wordGrid[row][i].value)
numCounted = 0
for j in range(5):
if (((grid[row][j].fill == "gold") or (grid[row][j].fill == "green")) and (guessed[i] ==
wordGrid[row][j].value)):
numCounted += 1
if (numCounted < numChar):
grid[row][i].fill = "gold"
def onMousePress(mouseX, mouseY):
if (playHit.hits(mouseX,mouseY)):
startingScreen.visible = False
if (exitHit.hits(mouseX,mouseY)):
directionsScreen.visible = False
def onKeyPress(key):
global characterIndex
global guesses
global wordGuess
if ((key == "backspace") and (characterIndex > 0) and (characterIndex <= 5)):
characterIndex-=1
wordGrid[guesses][characterIndex].fill = None
wordGrid[guesses].pop(characterIndex)
wordGrid[guesses].append(None)
wordGuess = ""
for i in range(characterIndex):
wordGuess += wordGrid[guesses][i].value
if ((key == "enter") and (characterIndex == 5)):
if (isWord(wordGuess, guesses) == True):
pass
elif (wordGuess.upper() != word.upper()):
isInWord(guesses)
guesses += 1
characterIndex = 0
wordGuess = ""
if (guesses == 6):
endGame(False)
if ((key != "backspace") and (key != "enter") and (key != "space") and (characterIndex < 5)
and (guesses < 6)):
wordGuess += key
wordGrid[guesses][characterIndex] = Label(key.upper(),110 + characterIndex * 45 ,115 +
guesses * 45, size = 20, fill = 'white', bold = True)
characterIndex += 1