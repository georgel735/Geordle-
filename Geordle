import random
#*Lists and variables
characterIndex = 0
guesses = 0
wordGuess = ""
grid = makeList(6,5)
wordGrid = makeList(6,5)
wordleList =
["Amped","Build","Crimp","Drive","Elite","First","Green","Hello","Index","Judge","Kiosk","Limit","M
eter","Nerdy","Ozone","Pzazz","Queen","Route","Steel","Titan","Unite","Video","World","Xerox","
Youth","Zesty"]
word = wordleList[random.randint(0,25)].upper()
#*
#* Geordle game ui + some other things
Rect(0, 0, 400, 400, fill = "black")
Line(0, 60, 400, 60, fill = "white")
george = Label("Geordle", 200, 30, size = 25, fill = 'white', bold = True)
for vertCount in range(6):
for horizontalCount in range(5):
grid[vertCount][horizontalCount] = Rect(90 + horizontalCount * 45,
95 + vertCount * 45,
40,
40,
fill = None,
border = "gray")
#*
directionsScreen = Group(
Rect(0,0,400,400),
Label("Guess the Geordle in 6 tries.", 10, 40, size = 15, fill = "white", align = "left"),
Label("After each guess, the color of the tiles will change to show", 10, 80, size = 15, fill =
"white", align = "left"),
Label("how close your guess was to the word.", 10, 100, size = 15, fill = "white", align = "left"),
)
for vertCount in range (3):
for horizontalCount in range(5):
if ((vertCount == 0) and (horizontalCount == 0)):
directionsScreen.add(Rect(10 + horizontalCount * 45, 125 + vertCount * 90, 40, 40, fill =
"green", border = "gray"))
if ((vertCount == 1) and (horizontalCount == 2)):
directionsScreen.add(Rect(10 + horizontalCount * 45, 125 + vertCount * 90, 40, 40, fill =
"gold", border = "gray"))
if ((vertCount == 2) and (horizontalCount == 3)):
directionsScreen.add(Rect(10 + horizontalCount * 45, 125 + vertCount * 90, 40, 40, fill =
"gray", border = "gray"))
else:
directionsScreen.add(Rect(10 + horizontalCount * 45, 125 + vertCount * 90, 40, 40, fill =
None, border = "gray"))
