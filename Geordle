#* Starting Screen
startingScreen = Group(
Rect(0, 0, 400, 400, fill = 'whiteSmoke'),
Rect(200, 150, 60, 60, fill = 'white', border = 'black', borderWidth = 3, align = 'center'),
Rect(210, 160, 17, 17, fill = 'green'),
